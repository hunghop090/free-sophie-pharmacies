        if($(item).attr("value")){
             $(item).val($(item).attr("value")).change();
        }
    });
     let ChangeTypeDiscount = () =>{
         if($("#TypeDiscount").val() == 'TypeTransportPromotionsDiscount_1') {
        $("#Price").prop('disabled', true);
         $("#Price").val(0);
        $("#MaxPriceDiscount").prop('disabled', false);
