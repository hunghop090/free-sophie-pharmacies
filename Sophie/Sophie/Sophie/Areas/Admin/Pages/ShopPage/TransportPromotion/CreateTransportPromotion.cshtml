<script src="~/lib/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
<script src="~/lib/plugins/summernote/summernote-bs4.min.js"></script>
<script src="~/lib/uploadfile/jquery.form.js"></script>
